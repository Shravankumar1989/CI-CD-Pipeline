pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Shravankumar1989/CI-CD-Pipeline.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'ls -ltr'

                    sh '''
                    cd spring-boot-app
                    mvn clean package
                    '''
                }
            }
        }
    }
}
