pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Shravankumar1989/CI-CD-Pipeline.git'
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh 'ls -ltr'
                }
            }
        }
    }
}
